<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
        <h1 id = "page-heading">
            <i class="fa fa-address-book"></i>
            My Employee Management Tool
        </h1>
        <div id = "mainContent">
            <ul>
                <% for (let i of contact_list) { %>

                    <div class="contact"> 
                        <li>
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </li>
                    </div>

                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <button  id = "Button1" type = "Submit">Delete Contact</button>
                        </a>
                    </div>

                    
                <% }%>
            </ul>
        </div>

        <form id = "form" action="/create-contact" method="POST">
            <input type="text" name = "name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone" required>
            <button  id = "Button" type = "Submit">Add Contact</button>
        </form>
        <script type = "text/javascript" src = "/js/home.js"></script>
    </body>
</html>